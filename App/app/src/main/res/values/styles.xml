<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorFavRed</item>
    </style>
    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_colors</item>
        <item name="android:textColor">@color/chip_text_colors</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">#FFD700</item>
        <item name="colorControlNormal">@color/grey</item>
    </style>
</resources>