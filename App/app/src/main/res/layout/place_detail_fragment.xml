<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:id="@+id/placeDetail_ScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.place_details.PlaceDetailFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/placeDetailsPicture"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:contentDescription="@string/image_default_desc"
                android:scaleType="fitXY"
                tools:src="@drawable/imagen_lugar_default" />

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="41dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPlaceDetailsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/place_default_name"
                    tools:layout_editor_absoluteX="3dp"
                    tools:layout_editor_absoluteY="4dp"

                    android:gravity="center_vertical"

                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="20sp"
                    android:autoSizeMaxTextSize="24sp"
                    android:autoSizeStepGranularity="1sp"


                    />

                <ImageView
                    android:id="@+id/placeDetailsMapIcon"
                    android:src="@drawable/ic_baseline_map_24"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/tvPlaceDetailsName"
                    android:contentDescription="@string/love_icon_default_desc"
                    />

                <ImageView
                    android:id="@+id/favDetailsImage"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/placeDetailsMapIcon"
                    android:contentDescription="@string/love_icon_default_desc"
                    android:src="@drawable/love_icon_24dp"
                    tools:layout_editor_absoluteX="232dp"
                    tools:layout_editor_absoluteY="4dp"
                    app:tint="@color/grey"
                    />

                <TextView
                    android:id="@+id/tvPlaceDetailsRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="276dp"
                    tools:layout_editor_absoluteY="4dp"
                    android:layout_toStartOf="@id/placeDetailsStarImage"
                    />

                <ImageView
                    android:id="@+id/placeDetailsStarImage"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/star_icon_default_desc"
                    android:src="@drawable/ic_baseline_star_rate_24"
                    app:layout_constraintStart_toEndOf="@+id/tvPlaceDetailsRating"
                    app:tint="@color/start_rating"
                    tools:layout_editor_absoluteY="4dp" />


            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/placeDetailsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/lorem_ipsu" />


        <TextView
            android:id="@+id/placeDetailsCommentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:text="@string/place_details_comment_title"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <RatingBar
            android:id="@+id/placeDetailsRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numStars="5" />



        <Button
            android:id="@+id/placeDetailSendRating"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/place_details_send_rate_button" />
<!--
        <RelativeLayout
            android:id="@+id/relativeLayout_comment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp">

            <include layout="@layout/comments_fragment"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </RelativeLayout>
-->
        <FrameLayout
            android:id="@+id/comments_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
