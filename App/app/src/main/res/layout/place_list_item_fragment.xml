<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical"
    tools:context=".ui.place_list_item.PlaceListItem">


    <ImageView
        android:id="@+id/placePicture"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:contentDescription="@string/image_default_desc"
        android:scaleType="fitXY"
        tools:src="@drawable/imagen_lugar_default" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/place_default_name"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="4dp" />

        <ImageView
            android:id="@+id/favImage"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tvPlaceName"
            android:contentDescription="@string/love_icon_default_desc"
            android:src="@drawable/love_icon_24dp"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="4dp"
            app:tint="@color/grey"
            />

        <TextView
            android:id="@+id/tvPlaceRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="4dp"
            android:layout_toStartOf="@id/placeStarImage"/>

        <ImageView
            android:id="@+id/placeStarImage"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/star_icon_default_desc"
            android:src="@drawable/ic_baseline_star_rate_24"
            app:layout_constraintStart_toEndOf="@+id/tvPlaceRating"
            app:tint="@color/start_rating"
            tools:layout_editor_absoluteY="4dp" />


    </RelativeLayout>

</LinearLayout>