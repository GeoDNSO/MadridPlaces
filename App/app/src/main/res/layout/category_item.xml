<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="@drawable/ripple_efect">

    <ImageView
        android:id="@+id/ivCategory"
        android:layout_width="@dimen/category_icon"
        android:layout_height="@dimen/category_icon"
        android:padding="@dimen/category_icon_padding"
        android:src="@drawable/ic_launcher_img"/>

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/menu_home_text"
        android:layout_gravity="center"
        android:textSize="24sp"/>


</LinearLayout>